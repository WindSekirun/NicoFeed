datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  followers Follower[]
  videos    Video[]
}

model Follower {
  id                    Int     @id @default(autoincrement())
  userid                Int
  uploaderUserName      String
  uploaderUserId        String  @unique
  uploaderUserThumbnail String
  initialSync           Boolean @default(false)
  user                  User    @relation(fields: [userid], references: [id], onDelete: Cascade)
  Video                 Video[]
}

model Video {
  id              Int      @id @default(autoincrement())
  userid          Int
  videoTitle      String
  videoLink       String
  videoPubDate    DateTime
  videoThumbnail  String
  uploaderUserId  String
  requestDateTime DateTime @default(now())
  user            User     @relation(fields: [userid], references: [id], onDelete: Cascade)
  follower        Follower @relation(fields: [uploaderUserId], references: [uploaderUserId], onDelete: Cascade)
}
